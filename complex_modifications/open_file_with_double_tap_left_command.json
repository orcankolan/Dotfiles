{
  "title": "Double tap left_option to open file in finder",
  "rules": [
    {
      "description": "Double tap right_option key to open file in finder",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "left_option",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "shell_command": "osascript /Users/orcan/.config/karabiner/assets/complex_modifications/open_file_script"
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "key pressed",
              "value": 1
            }
          ]
        },

        {
          "type": "basic",
          "from": {
            "key_code": "left_option",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "set_variable": {
                "name": "key pressed",
                "value": 1
              }
            },
            {
              "key_code": "left_option"
            }
          ],
          "description": "to_delayed_action is set to 400ms in karabiner.json",
          "to_delayed_action": {
            "to_if_invoked": [
              {
                "set_variable": {
                  "name": "key pressed",
                  "value": 0
                }
              }
            ],
            "to_if_canceled": [
              {
                "set_variable": {
                  "name": "key pressed",
                  "value": 0
                }
              }
            ]
          }
        }
      ]
    }
  ]
}
